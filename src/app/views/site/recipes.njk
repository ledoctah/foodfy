{% extends "layout_site.njk" %}

{% block head %}
    <title>
        Foodfy - Home
    </title>
{% endblock %}

{% block content %}

    <section id="recipes">
        {% if filter | length %}
        <h1 class="search-params">Buscando por “{{filter}}”</h1>
        {% endif %}
        <section id="foods-cards">

            {% for recipe in recipes %}
                <section class="food-card" id="{{recipe.id}}">
                    <img src="{{recipe.image}}" alt="{{recipe.title}}">
                    <h3>{{recipe.title}}</h3>
                    <p>por {{recipe.chef_name}}</p>
                </section>
            {% endfor %}
            
        </section>
    </section>
    
    <div class="pagination" data-total={{pagination.total}} data-page={{pagination.page}} data-filter={{pagination.filter}}></div>

{% endblock %}
