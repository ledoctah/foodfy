{% extends "session/layout.njk" %}

{% block head %}
<title>Esqueci a senha | Foodfy</title>
{% endblock head %}

{% block content %}
<form action="/password-reset" method="POST">

    <h1>Nova Senha</h1>
    <div class="item">
        <div>Email</div>
        <input type="email" name="email" value="{{email}}" placeholder="Digite seu email">
    </div>

    <div class="item">
        <div>Nova senha</div>
        <input type="password" class="{{ 'error' if message.error }}" name="password" placeholder="Digite sua nova senha">
    </div>

    <div class="item">
        <div>Repetir senha</div>
        <input type="password" class="{{ 'error' if message.error }}" name="password-repeat" placeholder="Repita a nova senha">
    </div>
    
    <button type="submit">Recuperar</button>

</form>
{% endblock content %}