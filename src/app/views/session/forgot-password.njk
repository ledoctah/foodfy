{% extends "session/layout.njk" %}

{% block head %}
<title>Esqueci a senha | Foodfy</title>
{% endblock head %}

{% block content %}
<form action="/forgot-password" method="POST">

    <h1>Esqueceu a senha?</h1>
    <div class="item">
        <div>Email</div>
        <input type="email" name="email" value={{email}}>
    </div>
    
    <button type="submit">Recuperar</button>

</form>
{% endblock content %}