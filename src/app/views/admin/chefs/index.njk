{% extends "layout_admin.njk" %}

{% block head %}
        <title>Gerenciar receitas | Admin Foodfy</title>
{% endblock %}

{% block content %}
    <h1>Gerenciar Chefs</h1>
    <a href="/admin/chefs/create" class="button">Criar chef</a>
    <div class="chef-cards">
        {% for chef in chefs %}
            <div class="chef-card">
                <div class="chef-avatar_url">
                    <img src="{{chef.file_src}}" alt="">
                </div>
                <div class="chef-info">
                    <h4>{{chef.name}}</h4>
                    <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock content %}