{% extends "layout_admin.njk" %}

{% block head %}
        <title>{{chef.name}} | Admin Foodfy</title>
{% endblock %}

{% block content %}
    <div class="chef-information">
        <h1>Chef: {{chef.name}}</h1>
        <a href="/admin/chefs/{{chef.id}}/edit" class="button">Editar chef</a>
        <img src="{{file.src}}" alt="Imagem do chef {{chef.chef}}" id="chef">
    </div>

    <div class="chef-presentation">
        <h2>{{chef.name}}</h2>
        <h3>{{recipes | length}} {% if recipes | length == 1 %} receita {% else %} receitas {% endif %}</h3>
    </div>

    <div class="chef_recipes-container">
        <h1>Receitas</h1>
        <div class="admin_recipe-cards">
            {% for recipe in recipes %}
                <div class="admin_recipe-card">
                    <div class="recipe-image">
                        <img src="{{recipe.image}}" alt="">
                    </div>
                    <div class="recipe-info">
                        <h4>{{recipe.title}}</h4>
                        <h5>por {{chef.name}}</h5>
                        <a href="/admin/recipes/{{loop.index}}">Visualizar</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    
    
{% endblock %}